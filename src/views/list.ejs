<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
<!-- JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8" crossorigin="anonymous"></script>

</head>
<body style="background-image:url('https://cdn2.yamaha-motor.eu/prod/product-assets/2022/YZF600R6RCOMP/2022-Yamaha-YZF600R6RCOMP-EU-Detail-001-03.jpg') ;">
  <form action="/search" method="get">
    <input type="text" id="keyword" name="keyword">
    <button type="submit" class="btn btn-primary" >Search</button>
  </form>

  <form action="/sort" method="get">
    <button  class="btn btn-info" type="submit">Sort</button>
    </form>

    <form action="/create" method="get">
      <button  class="btn btn-warning" type="submit">Create</button>
      </form>
  
    <table class="table table-dark">
        <thead>
          <tr>
            <th scope="col">STT</th>
            <th scope="col">employeeCode</th>
            <th scope="col">Name</th>
            <th scope="col">Age</th>
            <th scope="col">Salary</th>
            <th scope="col">Branch</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <%for (let i = 0; i < users.length; i ++) {%>
          <tr>
            <th scope="row"><%= i + 1 %></th>
            <td><%= users[i].employeeCode %></td>
            <td>
              <a href="/detail/<%= users[i].id %>" class="prise">
                <%= users[i].name %></a>
            </td>
            <td><%= users[i].age %></td>
            <td><%= users[i].salary %></td>
            <td><%= users[i].branch %></td>
            <td><a href="/update/<%= users[i].id %>" class="btn btn-primary btn-fill">update</a>
              <form action="/delete/<%= users[i].id %>" method="post" enctype="multipart/form-data">
                <button type="submit" class="btn btn-danger btn-fill">Delete</button>
               </form>
            </td>
          </tr>
          <%}%>
        </tbody>
      </table>
</body>
</html>